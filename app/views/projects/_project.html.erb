<div id="<%= dom_id project %>">
  <h1><%= project.title %> <%= button_to heroicon("trash", variant: :outline, options: { style: "color: red; width: 1em; height: 1em;" }), @project, method: :delete %></h1>
  <%# project.description %>
  <div id="projects" class="lanes">
    <%= turbo_frame_tag :lanes, src: lanes_path(project_id: project.id), data: { controller: "drag-drop" } %>
    <%= turbo_frame_tag :new_lane do %>
      <%= link_to new_lane_path(params: { project_id: project.id }), class: "project-add-lane", data: { turbo_frame: :new_lane } do %>
        <%= heroicon("plus", variant: :outline, options: { style: "color: teal; width: 1em; height: 1em;" }) %>
        <span class="project-add-lane-label">Add Lane</span>
      <% end %>
    <% end %>
  </div>
</div>
