<p style="color: green"><%= notice %></p>

<div id="projects" class="project">
  <%= turbo_frame_tag "projects" do %>
    <% @projects.each do |project| %>
      <div id="<%= dom_id project %>" class="project-card">
        <details>
          <summary><%= link_to project.title, project_path(project), data: { turbo_frame: "_top" } %></summary>
          <%= project.description %>
        </details>
      </div>
    <% end %>
  <% end %>
</div>

<%= link_to "New project", new_project_path %>
