<p style="color: green"><%= notice %></p>

<div id="projects">

  <% @projects.each do |project| %>
    <div id="<%= dom_id project %>" class="card">
      <details>
        <summary><%= link_to project.title, project_path(project) %></summary>
        <%= project.description %>
      </details>
    </div>
  <% end %>
</div>

<%= link_to "New project", new_project_path %>
