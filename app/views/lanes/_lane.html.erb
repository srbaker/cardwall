<div class="lane" id="<%= dom_id lane %>" data-id="<%= lane.id %>" data-url="/lanes/:id">
  <div class="lane-header">
    <div class="lane-name">
      <%= lane.title %>
    </div>
    <div class="lane-actions">
      <%= link_to heroicon("trash", variant: :outline, options: { style: "color: red; width: 1em; height: 1em;" }), lane, method: :delete %>
    </div>
  </div>
  <%= turbo_frame_tag "cards", src: cards_path(lane_id: lane.id), class: "cards", data: { controller: "drag-drop" } %>
  <%= turbo_frame_tag :new_card do %>
    <%= link_to "+", new_card_path(params: { lane_id: lane.id }), data: { turbo_frame: :new_card } %>
  <% end %>
</div>
